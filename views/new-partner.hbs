<h2 class="text-center mt-4">Création d'un nouveau partenaire</h2>
<div class="container mt-5">
    {{#if message}}
    <div class="alert alert-success mt-4" role="alert">
        <p class="text-center">{{message}}</p>
    </div>
    {{/if}}
    {{#if error}}
    <div class="alert alert-danger mt-4" role="alert">
        <p class="text-center">{{error}}</p>
    </div>
    {{/if}}
    <form method="post" action="/admin/newPartner">
        <div class="mb-3">
            <label for="nom" class="form-label">Nom du partenaire</label>
            <input type="text" class="form-control" id="name" aria-describedby="emailHelp" name="name">
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Adresse Mail</label>
            <input type="email" class="form-control" id="email" aria-describedby="emailHelp" name="email">
            <div id="emailHelp" class="form-text">Merci de choisir le nom de la franchise comme suit :
                "nom@happysport.com"</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="description" id="description" cols="15" rows="4" class="form-control"></textarea>
        </div>
        <button type="submit" class="btn btn-success">Valider</button>
    </form>
</div>