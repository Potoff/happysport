<div class="container text-center mt-5 d-md-flex justify-content-between align-items-center">
    {{#hall}}
    <div class="mb-3">
        <img src={{image_url}} alt=""
            class="img-fluid w-75 border rounded rounded-4 border-1 border-dark border-opacity-25">
    </div>
    <div>
        <div>
            {{#if is_active}}
            <span class="badge rounded-pill text-bg-success">Actif</span>
            {{else}}
            <span class="badge rounded-pill text-bg-secondary">Inactif</span>
            {{/if}}
        </div>
        <h2 class="mb-3"><u>{{name}}</u></h2>
        <h3>{{Partner.name}}</h3>
        <p class="mb-3">{{description}}</p>
        <p class="mb-3">{{email}}</p>
        <p class="mb-3">{{street}}</p>
        <p class="mb-3">{{postal_code}}</p>
        <p class="mb-3">{{city}}</p>
        <h6 class="h6 p-2 text-center"><u> Liste des modules actifs : </u></h6>
        <ul class="list-group list-group-flush text-center mb-3">
            {{#Modules}}
            <li class="list-group-item fs-5 fw-bold">{{name}}</li>
            <p class="fs-6 fst-italic">{{description}}</p>
            {{/Modules}}
        </ul>
    </div>
    {{/hall}}
</div>