<div class="container h-75 d-flex flex-column align-items-center justify-content-evenly">
    <div class="d-flex justify-content-center align-items-center">
        <img src="images/logo-haltere.png" alt=""
            class="img-fluid w-25 border rounded rounded-5 border-2 border-dark border-opacity-25 rounded-circle p-2">
        <h1 class="ms-4">HappySport</h1>
    </div>
    <div class="border rounded rounded-5 border-2 border-dark border-opacity-25 p-5 bg-light align-self-center w-75-md">
        {{#if message}}
            <div class="alert alert-danger mt-4 text-center">
                <p class="text-center">{{message}}</p>
            </div>
            {{/if}}
            {{#if error}}
            <div class="alert alert-danger mt-4 text-center">
                <p class="text-center">{{error}}</p>
            </div>
            {{/if}}
        <form method="POST" action="/user/login">
            <div class="mb-3">
                <label for="email" class="form-label" name="email">Adresse Mail :</label>
                <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp">
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Mot de passe :</label>
                <input type="password" class="form-control" id="exampleInputPassword1" name="password">
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-dark">Se connecter</button>
            </div>
            <div class="text-center mt-4">
                <a href="signup" class="link-secondary">Premi√®re connexion ?</a>
            </div>         
        </form>
    </div>
</div>