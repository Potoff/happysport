<div class="container">
    <h2 class="text-center mt-2 mb-2">Tout les partenaires : </h2>
    {{#if message}}
    <div class="d-flex flex-column align-items-center">
        <div class="alert alert-success mt-4 mb-5" role="alert">
            <p class="text-center">{{message}}</p>
        </div>
        <a href="/admin">
            <button type="button" class="btn btn-dark">Retour à la liste des partenaires</button>
        </a>
    </div>
    {{/if}}
    {{#if error}}
    <div class="d-flex flex-column align-items-center">
        <div class="alert alert-danger mt-4 mb-5" role="alert">
            <p class="text-center">{{error}}</p>
        </div>
        <a href="/admin">
            <button type="button" class="btn btn-dark">Retour à la liste des partenaires</button>
        </a>
    </div>
    {{/if}}
    {{!-- Search bar --}}
    <div class="d-flex align-items-center mt-5" id="spinnerContainerPartner">
        <input class="form-control me-2 me-4" list="datalistOptions" id="exampleDataListPartner"
            placeholder="Chercher une franchise ... ">
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="all"
                onclick="window.location='/admin';" checked>
            <label class="form-check-label" for="inlineRadio1">Toute</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="activePartnerRadio"
                value="actif">
            <label class="form-check-label" for="activePartnerRadio">Active</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inactivePartnerRadio"
                value="inactif">
            <label class="form-check-label" for="inactivePartnerRadio">Inactive</label>
        </div>
    </div>
</div>
<div class="container-fluid mt-4 d-flex justify-content-center align-items-center flex-wrap">

    {{#partners}}
    <div class="card mt-2 mx-2 h-100 partnerCard" style="width: 18rem;">
        <img class="card-img-top" src={{image_url}} alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">{{name}}</h5>
            <p class="card-text">{{description}}</p>
            <p class="card-text mb-3">Login: {{User.email}}</p>
            <p class="card-text mb-3">Contact: {{email}}</p>
            <div class="d-flex justify-content-between">
                <div class="d-flex justify-content-between w-50">
                    <a href="/admin/getUpdatePartnerForm/{{id}}" class="badge rounded-pill bg-dark"><svg
                            xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-pencil" viewBox="0 0 16 16">
                            <path
                                d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                        </svg></a>
                    <a type="button" data-bs-toggle="modal" data-bs-target="#deleteModal{{id}}"
                        class="badge rounded-pill bg-dark"><svg xmlns="http://www.w3.org/2000/svg" width="16"
                            height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                            <path
                                d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                            <path fill-rule="evenodd"
                                d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                        </svg></a>
                    <a href="/admin/getPartner/{{id}}" class="badge rounded-pill bg-dark"><svg
                            xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-eye" viewBox="0 0 16 16">
                            <path
                                d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z" />
                            <path
                                d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z" />
                        </svg></a>
                </div>
                <div class="isActive">
                    {{#if is_active}}
                    <span class="badge rounded-pill text-bg-success">Actif</span>
                    {{else}}
                    <span class="badge rounded-pill text-bg-secondary">Inactif</span>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
    {{!-- Delete Modal --}}
    <div class="modal fade" id="deleteModal{{id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Suppression définitive du partenaire et de ses
                        franchises</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form method="post" action="/admin/deletePartner/{{id}}">
                        <p class="fs-5">Etes vous sur de vouloir supprimer ce partenaire ?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Non</button>
                    <button type="submit" class="btn btn-success">Valider</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    {{/partners}}
</div>

</div>