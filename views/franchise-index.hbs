<div class="container">
    <h2 class="text-center mt-2 mb-2">Toutes les salles : </h2>
    {{#if message}}
    <div class="d-flex flex-column align-items-center">
        <div class="alert alert-success mt-4 mb-5" role="alert">
            <p class="text-center">{{message}}</p>
        </div>
        <a href="/franchise">
            <button type="button" class="btn btn-dark">Retour à la liste des salles</button>
        </a>
    </div>
    {{/if}}
    {{#if error}}
    <div class="d-flex flex-column align-items-center">
        <div class="alert alert-danger mt-4 mb-5" role="alert">
            <p class="text-center">{{error}}</p>
        </div>
        <a href="/franchise">
            <button type="button" class="btn btn-dark">Retour à la liste des salles</button>
        </a>
    </div>
    {{/if}}
    {{!-- Search bar --}}
    <div class="d-flex flex-column align-items-center mt-5" id="spinnerContainerPartner">
        <input class="form-control me-4" list="datalistOptions" id="exampleDataListPartnerIndex"
            placeholder="Chercher une salle ... ">
        <div class="mt-4">
            <div class="form-check form-check-inline">
                <input class="form-check-input getAllRadio" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1"
                    {{!-- onclick="window.location='/franchise';"  --}}
                    checked>
                <label class="form-check-label" for="inlineRadio1">Toute</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="activeHallByPartnerRadio"
                    value="actif">
                <label class="form-check-label" for="activeHallByPartnerRadio">Active</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inactiveHallByPartnerRadio"
                    value="inactif">
                <label class="form-check-label" for="inactiveHallByPartnerRadio">Inactive</label>
            </div>
        </div>
    </div>

    <div class="container-fluid mt-4 d-flex justify-content-center align-items-center flex-wrap">
        {{#partner.Halls}}
        <div class="card mt-2 mx-2 h-100 hallCard" style="width: 18rem;">
            <img class="card-img-top" src={{image_url}} alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">{{name}}</h5>
                <p class="card-text">{{description}}</p>
                <p class="card-text mb-3">{{User.email}}</p>
                <div class="d-flex justify-content-between">
                    <div class="d-flex justify-content-between w-50">
                        <a href="/franchise/getHall/{{id}}" class="badge rounded-pill bg-dark"><svg
                                xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                class="bi bi-eye" viewBox="0 0 16 16">
                                <path
                                    d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z" />
                                <path
                                    d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z" />
                            </svg></a>
                    </div>
                    <div class="isActive">
                        {{#if is_active}}
                        <span class="badge rounded-pill text-bg-success">Actif</span>
                        {{else}}
                        <span class="badge rounded-pill text-bg-secondary">Inactif</span>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
        {{/partner.Halls}}


    </div>
</div>